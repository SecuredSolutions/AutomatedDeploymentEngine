{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "metadata": { "description": "Name of parent Resource Group" }
    },
    "resourceGrouplocation": {
      "type": "string",
      "metadata": {
        "description": "A reference to a resource location"
      }
    },
    "resourceTemplateUri": {
      "type": "string",
      "minLength": 14,
      "metadata": {
        "description": "The URI hosting nested templates, for linked deployments"
      }
    },
    "nicName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of Network Interface"
      }
    },
    "nicSuffix": {
      "type": "string",
      "defaultValue": "-nic",
      "metadata": {
        "description": "Suffix of Network Interface"
      }
    },
    "subnetRef": {
      "type": "string",
      "defaultValue": "SubnetDefault",
      "metadata": {
        "description": "A reference to an existing subnet"
      }
    },
    "dnsServers": {
      "type": "array",
      "defaultValue": []
    },
    "lbBackendAddressPoolIds": {
      "type": "array",
      "defaultValue": []
    },
    "lbInboundNatRuleIds": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnetRef')]"
              },
              "loadBalancerBackendAddressPools": "[parameters('lbBackendAddressPoolIds')]",
              "loadBalancerInboundNatRules": "[parameters('lbInboundNatRuleIds')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('nicName'),'-staticIPDeployment')]",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('nicName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('resourceTemplateUri'), 'set-staticnic-lb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "subnetRef": { "value": "[parameters('subnetRef')]" },
          "nicName": { "value": "[parameters('nicName')]" },
          "resourceGroupName": { "value": "[parameters('resourceGroupName')]" },
          "resourceGroupLocation": { "value": "[parameters('resourceGroupLocation')]" },
          "ipAddress": {
            "value": "[reference(concat('Microsoft.Network/networkInterfaces/', parameters('nicName'))).ipConfigurations[0].properties.privateIPAddress]"
          },
          "dnsServers": "[parameters('dnsServers')]",
          "lbBackendAddressPoolIds": { "value": "[parameters('lbBackendAddressPoolIds')]" },
          "lbInboundNatRuleIds": { "value": "[parameters('lbInboundNatRuleIds')]" }
        }
      }
    }
  ]
}
